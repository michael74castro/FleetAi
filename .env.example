# FleetAI Environment Variables Example
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================
# MSSQL Server connection string
DATABASE_URL=mssql+aioodbc://username:password@server:1433/FleetAI?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# IBM DB2 for i connection (for ETL)
DB2_DSN=Driver={IBM i Access ODBC Driver};System=your-power10-server;UID=username;PWD=password;

# =============================================================================
# Azure AD / Entra ID Configuration
# =============================================================================
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# Application Configuration
# =============================================================================
# Secret key for JWT signing (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Debug mode (set to false in production)
DEBUG=false

# Export directory for reports
EXPORT_DIR=/app/exports

# =============================================================================
# SMTP Configuration (for scheduled reports)
# =============================================================================
SMTP_HOST=smtp.your-server.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# Airflow Configuration
# =============================================================================
# Airflow database URL (can use SQLite for dev, PostgreSQL for production)
AIRFLOW_DB_URL=sqlite:////opt/airflow/airflow.db

# Fernet key for Airflow encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
AIRFLOW_FERNET_KEY=your-fernet-key-here

# =============================================================================
# Frontend Configuration (for Docker build)
# =============================================================================
VITE_API_URL=http://localhost:8000/api/v1
VITE_AZURE_CLIENT_ID=your-client-id
VITE_AZURE_TENANT_ID=your-tenant-id
VITE_API_SCOPE=api://fleetai/.default
VITE_REDIRECT_URI=http://localhost:3000

# =============================================================================
# Optional: Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
